          <div id="expmnt" class="hide">
              <div class="wrapper">
                  <div class="topicsSelected">
                      <div class="boxh">
              		        <h4>Topics Selected</h4>
              	     </div>
              		    <ul id="ts" class="boxc"></ul>
                  </div>
            
                  <div class="currentTopics">
                      <div class="boxh">
